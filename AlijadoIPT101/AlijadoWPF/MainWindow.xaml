<Window x:Class="MOTORPARTS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Background="LightBlue"
        Title="Motorcycle Parts" Height="500" Width="800">
    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <DockPanel Grid.Row="0" Margin="0,10,0,20">
            <TextBlock Text="MOTORCYCLE PARTS"
                       FontWeight="Bold"
                       FontFamily="Times New Roman"
                       FontSize="28"
                       VerticalAlignment="Center"
                       DockPanel.Dock="Left"/>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        DockPanel.Dock="Right">
                <Border Background="White" CornerRadius="4" BorderBrush="Gray" BorderThickness="1">
                    <DockPanel>
                        <Image Source="https://cdn-icons-png.flaticon.com/512/622/622669.png"
                               Width="14" Height="14" Margin="5,0,5,0"
                               VerticalAlignment="Center"/>
                        <TextBox Name="txtSearch"
                                 Width="200"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 FontSize="13"
                                 Foreground="Black"
                                 Padding="2"
                                 VerticalContentAlignment="Center"
                                 TextChanged="txtSearch_TextChanged"/>
                    </DockPanel>
                </Border>
            </StackPanel>
        </DockPanel>


        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1" Margin="0,0,0,20">

            <StackPanel Margin="5" Width="120">
                <TextBlock Text="Part ID" Margin="0,0,0,5"/>
                <TextBox Name="txtPartID"/>
            </StackPanel>

            <StackPanel Margin="5" Width="150">
                <TextBlock Text="Part Name" Margin="0,0,0,5"/>
                <TextBox Name="txtPartName"/>
            </StackPanel>

            <StackPanel Margin="5" Width="130">
                <TextBlock Text="Part Number" Margin="0,0,0,5"/>
                <TextBox Name="txtPartNumber"/>
            </StackPanel>

            <StackPanel Margin="5" Width="200">
                <TextBlock Text="Description" Margin="0,0,0,5"/>
                <TextBox Name="txtDescription"/>
            </StackPanel>

            <StackPanel Margin="5" Width="100">
                <TextBlock Text="Price" Margin="0,0,0,5"/>
                <TextBox Name="txtPrice"/>
            </StackPanel>

        </StackPanel>


        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="2" Margin="0,0,0,10">
            <Button Content="Add Part" Width="100" Height="35" Foreground="White" Background="Black" Margin="5"/>
            <Button Content="Edit Part" Width="100" Height="35" Margin="5"/>
            <Button Content="Delete Part" Width="100" Height="35" Margin="5"/>
        </StackPanel>


        <DataGrid Name="dgParts"
                  Grid.Row="3"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  AlternatingRowBackground="LightGray"
                  GridLinesVisibility="Horizontal"
                  CanUserAddRows="False"
                  Margin="0,10,0,0"
                  Background="White"
                  BorderBrush="Gray"
                  BorderThickness="1"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Part ID" Binding="{Binding PartID}" Width="*"/>
                <DataGridTextColumn Header="Part Name" Binding="{Binding PartName}" Width="*"/>
                <DataGridTextColumn Header="Part Number" Binding="{Binding PartNumber}" Width="*"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="2*"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
